
@{
    ViewData["Title"] = "Parolamı Unuttum - Stok Web";
}

<main class="login-form ">
    <div class="container">
        <div class="row justify-content-center ">
            <div class="col-md-7">
                <div class="card shadow-lg">
                    <div class="card-header text-center h5">Parolamı Unuttum</div>
                    <div class="card-body">
                        <form asp-action="ForgotPassword" id="forgotPassForm">
                            <div asp-validation-summary="All" class="text-danger text-center"></div>
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label text-md-right">Eposta</label>
                                <div class="col">
                                    <input  name="Email" type="Email"  class="form-control" />
                                    <span name="Email" class="text-danger"></span>
                                </div>
                            </div>

                        

                            <div class="form-group row">
                                <div class="col-md-2 col-form-label text-md-right"></div>
                                <div class="col">
                                    <div class="divider-65">
                                        <button type="submit" class="btn btn-primary w-100">
                                            Parolamı Unuttum
                                        </button>
                                    </div>
                                    <div class="divider-35 float-right">
                                        <a  href="#" onClick="history.go(-1); return false;" class="btn btn-link float-right">
                                            Geri Dön
                                        </a>
                                    </div>
                                </div>
                            </div>



                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>


</main>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>



    $(function() {
        $("#forgotPassForm").validate({


            rules: {
                Email: {
                    required: true,
                    email:true

                }
                ,
                

            },
            messages: {
               Email: {
                    required: "Boş bırakamazsınız",
                    email: "Email formatında olmalı"

                },
               

            },


        });
});
    </script>



}