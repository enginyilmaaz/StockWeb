
@{
    ViewData["Title"] = "Kategoriler - Stock Web";
}

@model Stock.Web.Models.Category.CategoryListViewModel

@section Styles{

    <link rel="stylesheet" type="text/css" href="~/lib/datatable/datatables.min.css" />
}

<div class="container mt-3 col-md-8">
    <h4 class="text-center"> Kategori Listesi</h4>
    <hr />
    <table id="example" class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col" class="py-2 w-75"> Kategori Adı</th>
                <th scope="col" class="py-2 w-25 text-center">İşlemler</th>
            </tr>
        </thead>
        <tbody class="">
            @foreach (var item in Model.Categories)
            {
                <tr>

                    <td class="pb-0 pt-2 w-75">@item.CategoryName</td>
                    <td class="py-1 w-25 text-center">
                        <a href="/Admin/Category/Delete/@item.Id" data-link="/Admin/Category/Delete/@item.Id" class="btn btn-danger btn-sm mr-1" data-toggle="modal" data-target="#deleteModal"><i class="fas fa-trash" title="Sil"></i></a>

                        <a href="/Admin/Category/Edit/@item.Id" class="btn btn-primary btn-sm"><i class="fas fa-edit" title="Güncelle"></i></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


@await Html.PartialAsync("Modals/_deleteModal")
@section Scripts

{
    @await Html.PartialAsync("_dataTable")

}