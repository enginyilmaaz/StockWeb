
<div class="modal fade mt-5 pt-5" id="ConfirmEmailFormModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">


        @using (Html.BeginForm("ConfirmEmail", "Account", FormMethod.Post, new { id = "ConfirmEmailForm" }))
        {




            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Hesabımı Onayla</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group row px-3">
                        <label class="">Eposta</label>

                        <input type="email" id="email" name="email" class="form-control" />
                        <span  id="email" name="email" class="text-danger"></span>

                    </div>
                
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary" id="SubmitEmail">Onay Epostasını Tekrar Yolla</button>
                </div>
            </div>
        }
    </div>
</div>