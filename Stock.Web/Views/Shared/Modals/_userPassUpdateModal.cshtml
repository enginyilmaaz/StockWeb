@model Stock.Web.Models.Account.UserViewModel
 
<div class="modal fade mt-5 pt-5" id="userPassUpdateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">


        @using (Html.BeginForm("ChangePass", "Account", FormMethod.Post, new { id = "PassChangeForm" }))
        {




            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Parola Güncelle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group row px-3">
                        <label asp-for="ChangePassViewModel.Password" class=""></label>

                        <input asp-for="ChangePassViewModel.Password" class="form-control" />
                        <span asp-validation-for="ChangePassViewModel.Password" class="text-danger"></span>

                    </div>
                    <div class="form-group row px-3">
                        <label asp-for="ChangePassViewModel.RePassword" class=""></label>

                        <input asp-for="ChangePassViewModel.RePassword" class="form-control" />
                        <span asp-validation-for="ChangePassViewModel.RePassword" class="text-danger"></span>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary" id="Submit">Parolanı Güncelle</button>
                </div>
            </div>
        }
    </div>
</div>


