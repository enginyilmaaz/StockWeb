<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Stock.Web</title>
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/lib/chosen/component-chosen.css" />
    @RenderSection("Styles", required: false)
</head>
<body>



@if(User.Identity.IsAuthenticated)
{
    @await Html.PartialAsync("Partials/_navbar_loggedin")
}
else
{
    @await Html.PartialAsync("Partials/_navbar_notlogged")
}

   


    <div class="container">
        <main role="main" class="pb-3" id="main-content">
            @await Html.PartialAsync("Modals/_toastShow")
            @RenderBody()
        </main>
    </div>

<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
<script src="~/lib/chosen/chosen.jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>


@RenderSection("Scripts", required: false)

    <script>
        $(document).ready(function () {
            $('.toast').toast({ animation: true, delay: 6000 });
            $('#defaultToast').toast('show');
        
        });

</script>

</body>
</html>
